# Auto detect text files and perform LF normalization
* text=auto

# LaTeX files
*.tex text eol=lf
*.bib text eol=lf
*.cls text eol=lf
*.sty text eol=lf

# PDF files (binary)
*.pdf binary

# Font files (binary)
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Image files (binary)
*.png binary diff=image
*.jpg binary diff=image
*.jpeg binary diff=image
*.gif binary diff=image
*.ico binary
*.svg binary

# Archive files (binary)
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# C# files
*.cs text eol=lf diff=csharp
*.csproj text eol=lf
*.sln text eol=lf

# Git LFS tracking for large font files
*.ttf filter=lfs diff=lfs merge=lfs -text
*.otf filter=lfs diff=lfs merge=lfs -text
